<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="jh.studio.entity.Tag" table="tag">
        <id name="id" type="int">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="name" type="string">
            <column name="name" length="20" not-null="true" />
        </property>
        <property name="clickCount" type="int">
            <column name="click_count"/>
        </property>
        <set name="categories" table="category_agent">
			<key column="tag_id"></key>  
            <many-to-many column="category_id" class="jh.studio.entity.Category"/>  
		</set>
        <set name="photos" table="photo_agent">
			<key column="tag_id"></key>  
            <many-to-many column="photo_id" class="jh.studio.entity.Photo"/>  
		</set>
    </class>
</hibernate-mapping>
