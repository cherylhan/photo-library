<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<package name="default" namespace="/" extends="struts-default">
		<interceptors>
			<interceptor name="checkuserinterceptor"
				class="jh.studio.interceptor.LoginInterceptor"></interceptor>
			<interceptor-stack name="checkuser">
				<interceptor-ref name="defaultStack"></interceptor-ref>
				<interceptor-ref name="checkuserinterceptor"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<!-- 默认执行的拦截器 -->
		<default-interceptor-ref name="checkuser" />
		<global-results>
			<result name="login">/login.jsp</result>
		</global-results>
		<action name="admin" class="jh.studio.ctl.AdminAction">
			<result name="success" type="redirect">/page/layout.html</result>
			<result name="error" type="redirect">/login.jsp</result>
		</action>
	</package>

	<package name="ajax-nav" namespace="/" extends="json-default">
		<result-types>
			<result-type name="json" class="org.apache.struts2.json.JSONResult" />
		</result-types>
		<interceptors>
			<interceptor name="json"
				class="org.apache.struts2.json.JSONInterceptor" />
				<interceptor name="checkuserinterceptor"
				class="jh.studio.interceptor.LoginInterceptor"></interceptor>
			<interceptor-stack name="checkuser">
				<interceptor-ref name="defaultStack"></interceptor-ref>
				<interceptor-ref name="checkuserinterceptor"></interceptor-ref>
			</interceptor-stack>
			</interceptors>
			<default-interceptor-ref name="checkuser" />
		<global-results>
			<result name="login">/login.jsp</result>
		</global-results>
		<action name="user" class="jh.studio.ctl.UserAction">
			<result name="success" type="json">
				<param name="root">results</param>
			</result>
		</action>
		<action name="updateAdmin" class="jh.studio.ctl.AdminAction"
			method="updateAdmin">
			<result name="success" type="json">
				<param name="root">result</param>
			</result>
			<result name="error" type="json">
				<param name="root">result</param>
			</result>
		</action>
		<action name="showAdmin" class="jh.studio.ctl.AdminAction"
			method="showAdmin">
			<result name="success" type="json">
				<param name="root">admin</param>
			</result>
		</action>
		<action name="tag" class="jh.studio.ctl.TagAction">
			<result type="json" name="success">
				<param name="root">results</param>
			</result>
		</action>
		<action name="findInfo" class="jh.studio.ctl.SetInfoAction" method="findInfo">
			<result type="json" name="success">
				<param name="root">setting</param>
			</result>
		</action>
		<action name="updateInfo" class="jh.studio.ctl.SetInfoAction" method="updateInfo">
			<result type="json" name="success">
				<param name="root">result</param>
			</result>
		</action>
	</package>
</struts>  
